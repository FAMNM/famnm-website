---
interface Props {
    id: string;
    i: number;
    active: boolean;
}

const { id, i, active } = Astro.props;

const itemClass = active ? "active" : "";
---

<button data-bs-target=`#${id}` data-bs-slide-to={i} class={itemClass} aria-label=`Slide ${i + 1}` />

<style>
    button {
        /* To override dark mode styling */
        background-color: white !important;
    }
</style>