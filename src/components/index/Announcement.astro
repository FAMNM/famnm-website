---
import { Picture } from "astro:assets";
import { importImage } from "../../images/imageImport";

interface Props {
  title: string;
  image: string;
  alt: string;
  links: Array<{
    text: string;
    link: string;
    tooltip?: string;
  }>;
}

const { title, image: imageLink, alt, links } = Astro.props;
---

<div class="col h-3 flex-grow-1">
  <div class="row g-0">
    {
      imageLink !== undefined && (
        <Picture
          src={importImage(imageLink)}
          class="rounded-4 feature-img"
          alt={alt}
          formats={["webp", "png"]}
          widths={[360, 480, 640, 800, 1024]}
        />
      )
    }

    <div class="mt-3">
      <h4>{title}</h4>
      <p><slot /></p>

      {
        links.map(({ text, link, tooltip }) =>
          tooltip ? (
            <p>
              <a
                href={link}
                target="_blank"
                rel="noreferrer noopener"
                class="icon-link btn famnm-btn-secondary"
                data-bs-toggle="tooltip"
                data-placement="top"
                title={tooltip}
              >
                {text}
              </a>
            </p>
          ) : (
            <p>
              <a
                href={link}
                target="_blank"
                rel="noreferrer noopener"
                class="icon-link btn famnm-btn-secondary"
              >
                {text}
              </a>
            </p>
          ),
        )
      }
    </div>
  </div>
</div>
