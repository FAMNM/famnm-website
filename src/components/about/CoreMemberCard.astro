---
import { Img } from "astro-imagetools/components";

export interface CoreMember {
    name: string;
    email: string;
    img: string;
    role: string;
}
interface Props {
    info: CoreMember;
}

const { info } = Astro.props;
---

<div class="card">
    <a href={`mailto:${ info.email }@umich.edu`}>
        <Img src={info.img} fit="cover" format="webp"
            objectFit="cover"
            attributes={{img: {class: "card-img-top", title: info.name}}}
            alt={`Picture of ${ info.name }, the ${ info.role } of FAMNM.`}
            width={500} height={650} />
        <div class="card-body px-1">
            <h5 class="card-title mb-0">{ info.role }</h5>
            <p class="card-text mb-0">{ info.name }</p>
            <p class="card-text">{ info.email }@umich.edu</p>
        </div>
    </a>
</div>

<style>
    .card {
        width: 250px;
        height: 100% !important;
    }
    
    .card > a {
        color: #3b8ac3;
    }
    
    .card > a:hover {
        text-decoration: none;
        color: #003368;
    }
</style>
