---
import BaseLayout from "../layouts/BaseLayout.astro";
import Announcements from "../components/index/Announcements.astro";
import Carousel from "../components/index/carousel/Carousel.astro";

// These static imports are necessary for <Picture /> to generate differently sized images at build time without requiring us to supply aspectRatio.
import imgRobPresentation from "../images/events/frc-kickoff/2023/rob-presentation.jpeg";
import imgClawBuild from "../images/ri3d/2023/claw-build.jpeg";
import imgAppleOrchard from "../images/index/carousel/apple-orchard-2022.jpg";
import img2019Winners from "../images/ri3d/2019-winners.jpg";
import img2018Ftc from "../images/index/carousel/east-jackson-ftc.jpg";
import imgLincolnEvent from "../images/index/carousel/lincoln-event.jpg";

const images = [
    {
        title: "2023 FRC Kickoff",
        description: "Teams learn about the University of Michigan Robotics Institute prior to the reveal of FIRST\u00ae CHARGED UP presented by Haas",
        src: imgRobPresentation,
    },
    {
        title: "Ri3D Under Development",
        description: "FAMNM's Robot in 3 Days team tests its new intake on cubes from CHARGED UP",
        src: imgClawBuild,
    },
    {
        title: "At the Apple Orchard",
        description: "FAMNM on a social trip to Apple Charlie's Orchard in October 2022",
        src: imgAppleOrchard,
    },
    {
        title: "FACC Winners!",
        description: "FAMNM's Robot in 3 Days team with the championship trophy from the first annual FIRST Alumni Collegiate Competition",
        src: img2019Winners,
    },
    {
        title: "Volunteering",
        description: "FAMNM wins the Volunteer Award at the 2018 East Jackson FTC Qualifier!",
        src: img2018Ftc,
    },
    {
        title: "Lincoln District Event",
        description: "FAMNM Volunteers help out at the 2018 FiM Lincoln Event! Photo credit to Jonathan Skowronek",
        src: imgLincolnEvent,
    },
];
---

<BaseLayout title="FIRSTÂ® Alumni & Mentors Network at Michigan">
    <main>
        <div class="container p-4">
            <div class="row align-items-center">
                <div class="col-sm-12">
                    <img id="frontpage-logo" class="center img-fluid" src="img/logo.png"
                    alt="Logo for FIRST Alumni and Mentors Network at Michigan"/>
                </div>
                <div class="col-sm-12 col-md">
                    <p class="text-description text-center">
                        FAMNM is a University of Michigan student
                        organization devoted to organizing student and departmental
                        efforts to support the
                        <a href="https://www.firstinspires.org" rel="noreferrer noopener" target="_blank">
                            <i>FIRST<sup>&reg;</sup></i>
                        </a> program locally and throughout the
                        <a href="https://firstinmichigan.org" rel="noreferrer noopener" target="_blank">state of Michigan</a>.
                        FAMNM offers college students the opportunity to volunteer in
                        various <i>FIRST<sup>&reg;</sup></i> programs and events,
                        hosts season kickoffs and Robot-in-3-Days (Ri3D), provides
                        funding for teams, and acts as a liaison between teams and
                        various university departments.
                    </p>
                </div>
            </div>
        </div>

        <Announcements />

        <Carousel id="homepage-carousel" images={images} class="mx-0 w-100 px-0 mb-4" />

        <section class="container mb-4" id="volunteer-list">
            <div class="row mb-2">
                <h1 class="text-center">FRC Event Volunteering</h1>
                <div class="col-12 justify-content-center d-flex">
                    <a type="button" class="btn btn-primary" role="button" href="https://docs.google.com/spreadsheets/d/1UCGM4nxUCAH1Qh0Je3I5_5y3FJOEYYLOj3YGD2zWLFE/edit" rel="noreferrer noopener">
                        Sign Up to Volunteer
                    </a>
                </div>
            </div>
            <iframe class="w-100" height="600" src="https://docs.google.com/spreadsheets/d/e/2PACX-1vRqrg5Jl1sd2KBdCbKdu-IZlGacSHeSQ17J0uV9P8T8466u-sppaKvunt4TXbOYDnh6coyNYffbQGab/pubhtml?gid=0&amp;single=true&amp;widget=true&amp;headers=false"></iframe>
        </section>
    </main>

    <style is:global>
        body {
            width: 100%;
        }

        .text-description {
            font-size: 18px;
            line-height: 1.5;
        }

        #frontpage-logo {
            max-height: 16em;
        }

        .feature-img {
            height: 300px;
            object-fit: cover;
        }
    </style>
</BaseLayout>
