  <style>
    #schedule-table th {
      opacity: 0.75;
      text-align: right;
      width: 5.5rem;
      height: 2.6rem;
      transform: translateY(-1.3rem);
      line-height: 100%;
      vertical-align: middle;
      padding: 0.5rem 0 0.5rem 0.5rem;
    }

    .schedule-time {
      padding: 4px;
      border-radius: 6px;
      border: 1px solid rgba(0, 0, 0, 0.7);
    }

    #schedule-table td {
      padding: 2px;
      border-top: 1px solid rgba(0, 0, 0, 0.4);
      border-bottom: 1px solid rgba(0, 0, 0, 0.4);
      vertical-align: middle;
      font-size: 1.1rem;
    }

    #schedule-table {
      max-width: 42rem;
    }

    table{
      align-items: center;
    }
    th {
      padding-top: 6px;
      padding-bottom: 4px;
    }
    td {
      text-align: start;
      vertical-align: top;
    }
  </style>
