---

<BaseLayout
  title="FAMNM Ri3D Team | FIRSTÂ® Alumni & Mentors Network at Michigan"
>
  <div class="container">
    <div class="content">
      <h1>2020 Ri3D Team</h1>

      <div class="row">
        {
          people.map((person) => (
            <div class="col-md-6 col-lg-4">
              <div class="card mt-4">
                <Picture
                  alt={`Picture of ${person.name}`}
                  class="card-img-top img-fluid w-100 h-auto"
                  src={importImage(person.image)}
                />
                <div class="card-block p-4">
                  <h4 class="card-title">{person.name}</h4>
                  <p class="card-text">
                    {person.major == "" ? (
                      <>
                        <b>{person.standing}</b>
                        <br />
                      </>
                    ) : (
                      <>
                        <b>{person.standing}: </b>
                        {person.major}
                        <br />
                      </>
                    )}
                    <i>{person.quote}</i>
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div><!-- /.container -->

  <!-- Page styles -->
  <style slot="head" is:global>
    @media (max-width: 800px) {
      .card-img-top {
        height: 100% !important;
      }
    }

    @media (min-width: 801px) {
      .card-img-top {
        height: 25vw !important;
      }
    }

    .card-img-top {
      object-fit: cover;
    }
  </style>
</BaseLayout>
